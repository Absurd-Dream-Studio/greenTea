{
    "compilerOptions": {
        "outDir": "build/Release",
        "noImplicitAny": true,
        "declaration": true,
        "declarationMap": true,
        "module": "ESNext",
        "removeComments": false,
        // "outFile": "./build/Release/index.js",
        "target": "ESNext",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "NodeNext",
        "lib": ["ESNext" , "DOM" , "DOM.Iterable"],
        "types": ["reflect-metadata" , "node"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceRoot": "./src/main",
        "sourceMap": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "paths": {
            "@Src/*": [
                "src/main/*"
            ],
            "@Test/*":[
                "src/test/*"
            ]
        }
    },
    "include": [
        "src/main/**/*",
        "src/test/**/*"
    ]
}